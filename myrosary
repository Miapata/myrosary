def print_numbered_text(number: int,
                        text: str,
                        width: int = 80,
                        leading_space: bool = True,
                        trim_subsequent: bool = False) -> None:
    """
    Print a numbered paragraph with wrapped lines that align under the first
    character after the number.

    Params:
      number: the list number (1, 2, 7, ...)
      text: the paragraph text (no leading number)
      width: max column width for wrapping
      leading_space: if True the line will start with a leading space: " 7. ..."
      trim_subsequent: if True subtract one space from the subsequent indent
                       (useful if you feel there's one extra space)

    Example:
      print_numbered_text(7, "Long text ...", width=70, leading_space=True, trim_subsequent=True)
    """
    # Build the visible prefix that appears on the first line.
    prefix = ( " " if leading_space else "" ) + f"{number}. "
    # Default subsequent indent matches the visible prefix length
    subsequent_len = len(prefix)
    # Optionally trim one from the subsequent indent if user prefers it
    if trim_subsequent and subsequent_len > 0:
        subsequent_len -= 1

    wrapper = textwrap.TextWrapper(
        width=width,
        initial_indent=prefix,
        subsequent_indent=' ' * subsequent_len
    )
    print(wrapper.fill(text))
    wrapper= textwrap.TextWrapper()

def print_centered(text):
    columns = shutil.get_terminal_size().columns
    print(text.center(10000))

